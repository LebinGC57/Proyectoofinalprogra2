<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🤖 SmartBoy"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿Qué te gustaría hacer hoy?"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <!-- Botones principales -->
        <Button
            android:id="@+id/btnFood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🍽️ Recomendaciones de Comida"
            android:textSize="16sp"
            android:padding="16dp"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnGym"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🏋️ Recomendaciones de Gimnasio"
            android:textSize="16sp"
            android:padding="16dp"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnAI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🤖 Asistente IA"
            android:textSize="16sp"
            android:padding="16dp"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnChef"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🍳 Chef Consciente"
            android:textSize="16sp"
            android:padding="16dp"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnFavorites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="❤️ Mis Favoritos"
            android:textSize="16sp"
            android:padding="16dp"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🔍 Buscar"
            android:textSize="16sp"
            android:padding="16dp"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnGoals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🎯 Mis Objetivos"
            android:textSize="16sp"
            android:padding="16dp"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📊 Mi Progreso"
            android:textSize="16sp"
            android:padding="16dp"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnFilters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🔧 Filtros"
            android:textSize="16sp"
            android:padding="16dp"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⚙️ Configuración"
            android:textSize="16sp"
            android:padding="16dp"
            android:layout_marginBottom="24dp"/>

        <!-- Botones de navegación -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="⬅️ Regresar"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnNext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Preferencias ➡️"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>

