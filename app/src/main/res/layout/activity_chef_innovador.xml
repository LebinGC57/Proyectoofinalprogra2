<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:background="@drawable/chef_header_background"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ‘¨â€ðŸ³ Chef Innovador"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Transforma tus ingredientes en propuestas gourmet Ãºnicas"
                android:textSize="16sp"
                android:textColor="#E0E0E0"
                android:gravity="center"
                android:lineSpacingExtra="4dp"/>

        </LinearLayout>

        <!-- Input Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/edit_text_background"
            android:padding="20dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ½ï¸ Ingredientes Disponibles"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2E7D32"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingresa 4-8 ingredientes separados por comas (ej: Pollo, LimÃ³n, Papa, Queso, Ajo, Tomate, Aceite, Sal)"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/etIngredientsInput"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/edit_text_background"
                android:padding="16dp"
                android:hint="Ej: Pollo, LimÃ³n, Papa, Queso, Ajo, Tomate, Aceite, Sal"
                android:textSize="16sp"
                android:textColor="#333333"
                android:gravity="top|start"
                android:inputType="textMultiLine"
                android:maxLines="4"
                android:scrollbars="vertical"/>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/btnGenerateProposal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="âœ¨ Crear Propuesta Gourmet"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/capture_button_background"
                android:textColor="#FFFFFF"
                android:padding="16dp"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnClearIngredients"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ—‘ï¸ Limpiar"
                android:textSize="14sp"
                android:background="@drawable/retake_button_background"
                android:textColor="#FFFFFF"
                android:padding="16dp"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

        <!-- Back Button -->
        <Button
            android:id="@+id/btnBackToChef"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â¬…ï¸ Volver al Chef Consciente"
            android:textSize="16sp"
            android:background="@drawable/commands_background"
            android:textColor="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="20dp"/>

        <!-- Proposal Container -->
        <LinearLayout
            android:id="@+id/llProposalContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"/>

        <!-- Guardar receta (inicialmente oculto) -->
        <Button
            android:id="@+id/btnSaveRecipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ’¾ Guardar receta"
            android:textSize="16sp"
            android:background="@drawable/commands_background"
            android:textColor="#FFFFFF"
            android:padding="14dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="20dp"
            android:visibility="gone"/>

        <!-- Empty State -->
        <LinearLayout
            android:id="@+id/llEmptyState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="40dp"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ³"
                android:textSize="48sp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Â¡Listo para crear magia culinaria!"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2E7D32"
                android:gravity="center"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingresa tus ingredientes y descubre propuestas gourmet Ãºnicas con tÃ©cnicas avanzadas de alta cocina."
                android:textSize="14sp"
                android:textColor="#666666"
                android:gravity="center"
                android:lineSpacingExtra="4dp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
