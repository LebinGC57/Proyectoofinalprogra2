<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:background="@drawable/chef_header_background"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📦 Gestor de Inventario Inteligente"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Optimiza tu inventario y genera listas de compras inteligentes"
                android:textSize="14sp"
                android:textColor="#E0E0E0"
                android:gravity="center"
                android:lineSpacingExtra="4dp"/>

        </LinearLayout>

        <!-- Inventario Actual Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/edit_text_background"
            android:padding="20dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📋 Inventario Actual"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2E7D32"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lista los ingredientes que tienes disponibles (separados por comas)"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/etCurrentInventory"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/edit_text_background"
                android:padding="16dp"
                android:hint="Ej: Leche, Huevos, Pan, Queso, Pollo, Arroz, Tomate, Ajo..."
                android:textSize="16sp"
                android:textColor="#333333"
                android:gravity="top|start"
                android:inputType="textMultiLine"
                android:maxLines="4"
                android:scrollbars="vertical"/>

        </LinearLayout>

        <!-- Objetivo del Menú Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/edit_text_background"
            android:padding="20dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🎯 Objetivo del Menú"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2E7D32"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¿Qué tipo de comida o menú quieres preparar?"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/etMenuObjective"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                android:padding="16dp"
                android:hint="Ej: Comidas de la semana, Cena mexicana, Comida italiana..."
                android:textSize="16sp"
                android:textColor="#333333"/>

        </LinearLayout>

        <!-- Básicos Faltantes Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/edit_text_background"
            android:padding="20dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="⚠️ Básicos Faltantes (Opcional)"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FF6B35"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Menciona básicos que sabes que están agotados"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/etBasicNeeds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                android:padding="16dp"
                android:hint="Ej: Leche, Huevos, Pan, Aceite..."
                android:textSize="16sp"
                android:textColor="#333333"/>

        </LinearLayout>

        <!-- Photo Analysis Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/edit_text_background"
            android:padding="20dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📸 Análisis por Foto (Opcional)"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2E7D32"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Toma una foto de tu refrigerador o despensa para análisis automático"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/btnTakePhotoInventory"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="📷 Tomar foto"
                    android:textSize="14sp"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/button_rounded_secondary"
                    android:textColor="#FFFFFF"/>

                <Button
                    android:id="@+id/btnSelectPhotoInventory"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="🖼️ Galería"
                    android:textSize="14sp"
                    android:padding="12dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/button_rounded_secondary"
                    android:textColor="#FFFFFF"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/ivInventoryPhoto"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:background="@drawable/image_placeholder"
                android:visibility="gone"/>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/btnAnalyzeInventory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="🔍 Analizar Inventario"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/capture_button_background"
                android:textColor="#FFFFFF"
                android:padding="16dp"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnClearAll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🗑️ Limpiar"
                android:textSize="14sp"
                android:background="@drawable/retake_button_background"
                android:textColor="#FFFFFF"
                android:padding="16dp"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

        <!-- Back Button -->
        <Button
            android:id="@+id/btnBackToChef"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⬅️ Volver al Chef Consciente"
            android:textSize="16sp"
            android:background="@drawable/commands_background"
            android:textColor="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="20dp"/>

        <!-- Report Container -->
        <LinearLayout
            android:id="@+id/llReportContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"/>

        <!-- Empty State -->
        <LinearLayout
            android:id="@+id/llEmptyState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="40dp"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📦"
                android:textSize="48sp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¡Optimiza tu inventario!"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2E7D32"
                android:gravity="center"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Completa la información y obtén una lista de compras inteligente y priorizada."
                android:textSize="14sp"
                android:textColor="#666666"
                android:gravity="center"
                android:lineSpacingExtra="4dp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
