<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿Qué te interesa hoy?"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preferencias de Comida"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupFood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipHealthy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🥗 Saludable"
                android:checkable="true"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipProtein"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🍗 Proteína"
                android:checkable="true"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipVegetarian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🥦 Vegetariano"
                android:checkable="true"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipLowCalorie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🥒 Bajo en Calorías"
                android:checkable="true"/>

        </com.google.android.material.chip.ChipGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preferencias de Gimnasio"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupGym"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipGainMuscle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="💪 Ganar Músculo"
                android:checkable="true"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipLoseWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📉 Perder Peso"
                android:checkable="true"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipCardio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🏃 Cardio"
                android:checkable="true"/>

        </com.google.android.material.chip.ChipGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Presupuesto"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupBudget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            android:layout_marginBottom="24dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipBudgetLow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="💰 Económico"
                android:checkable="true"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipBudgetMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="💵 Medio"
                android:checkable="true"
                android:checked="true"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipBudgetHigh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="💎 Premium"
                android:checkable="true"/>

        </com.google.android.material.chip.ChipGroup>

        <Button
            android:id="@+id/btnAiAssistant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🤖 Asistente IA"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnGoogleSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📧 Iniciar con Google"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⬅️ Regresar"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continuar ➡️"/>

    </LinearLayout>

</ScrollView>
