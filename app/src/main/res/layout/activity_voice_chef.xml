<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🎤"
                    android:textSize="60sp"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chef Consciente"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Asistente de Voz Inteligente"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:alpha="0.9"
                    android:layout_marginBottom="24dp"/>

            </LinearLayout>

            <!-- Estado actual -->
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🎤 Chef Consciente está listo"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:background="@drawable/status_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp"/>

            <!-- Instrucciones -->
            <TextView
                android:id="@+id/tvInstructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Di: 'Chef Consciente, tengo estos ingredientes...' o 'Chef, ¿Qué cocino con...?'"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:background="@drawable/instructions_background"
                android:padding="16dp"
                android:layout_marginBottom="24dp"/>

            <!-- Botones de control -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="24dp">

                <Button
                    android:id="@+id/btnStartListening"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="🎤 Empezar a Escuchar"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:padding="20dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/button_rounded"
                    android:textColor="#FFFFFF"/>

                <Button
                    android:id="@+id/btnStopListening"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="⏹️ Detener"
                    android:textSize="16sp"
                    android:padding="20dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/button_rounded_secondary"
                    android:textColor="#FFFFFF"
                    android:visibility="gone"/>

            </LinearLayout>

            <!-- Respuesta del Chef -->
            <TextView
                android:id="@+id/tvResponse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/response_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone"/>

            <!-- Contenedor de recetas -->
            <LinearLayout
                android:id="@+id/llResponseContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/recipe_container_background"
                android:padding="16dp"
                android:layout_marginBottom="24dp"/>

            <!-- Comandos de voz disponibles -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/commands_background"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🗣️ Comandos de Voz Disponibles"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• 'Chef Consciente, tengo estos ingredientes...'"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• 'Chef, ¿Qué cocino con...?'"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• 'Dame los pasos'"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• 'Otra opción'"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"/>

            </LinearLayout>

            <!-- Botón de regreso -->
            <Button
                android:id="@+id/btnBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="← Regresar a Chef Consciente"
                android:textSize="16sp"
                android:padding="16dp"
                android:background="@drawable/button_rounded_secondary"
                android:textColor="#FFFFFF"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
