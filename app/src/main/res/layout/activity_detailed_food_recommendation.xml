<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="←"
            android:textSize="20sp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/tvFoodIcon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🍔"
            android:textSize="80sp"
            android:gravity="center"
            android:padding="16dp"/>

        <TextView
            android:id="@+id/tvFoodName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del Alimento"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/tvFoodPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Q25"
            android:textSize="20sp"
            android:textColor="@color/purple_500"
            android:gravity="center"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/tvFoodRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="★★★★★ (4.5)"
            android:textSize="18sp"
            android:gravity="center"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/tvFoodDistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📍 5 min"
            android:textSize="16sp"
            android:gravity="center"
            android:padding="4dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción del alimento"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:padding="8dp"
            android:lineSpacingExtra="4dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Califica esta recomendación"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/tvRatingValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0.0 / 5.0"
            android:textSize="16sp"
            android:textColor="@color/purple_500"
            android:gravity="center"
            android:padding="4dp"/>

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:numStars="5"
            android:stepSize="0.5"
            android:rating="0"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnShare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📤 Compartir"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/purple_500"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnIgnore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ignorar"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/gray"/>

            <Button
                android:id="@+id/btnSave"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="💾 Guardar"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
